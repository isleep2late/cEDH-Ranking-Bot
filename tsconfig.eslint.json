{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true // Prevents this tsconfig from creating build artifacts
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "vitest.config.ts"
    // Add any other specific .ts files at the root or elsewhere that need linting with type info
  ],
  "exclude": [
    "node_modules", // Standard exclusion
    "dist"          // Standard exclusion for build output
  ]
}